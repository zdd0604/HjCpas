<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45"
                android:background="@drawable/bottom_line_bg_line"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/main_margin"
                android:paddingRight="@dimen/main_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/star"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/explan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/msg"
                    android:textColor="@color/black" />
            </LinearLayout>

            <TextView
                style="@style/text_style"
                android:layout_width="match_parent"
                android:background="@color/main_bg"
                android:paddingLeft="@dimen/size_15"
                android:paddingRight="@dimen/size_15"
                android:text="@string/gooddetail" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/lineColor" />

            <com.youth.banner.Banner
                android:id="@+id/goodsdetailed_banner"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@drawable/bottom_line_bg_line"
                android:clickable="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/size_5"
                    android:paddingLeft="@dimen/size_15"
                    android:paddingRight="@dimen/size_15"
                    android:paddingTop="@dimen/size_5"
                    android:text="@string/goodnames"
                    android:textColor="@color/grey" />

                <TextView
                    android:id="@+id/goodsdetailed_name"
                    style="@style/text_edittext"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/white"
                    android:gravity="left|center_vertical"
                    android:text="牛肉" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/size_5"
                    android:paddingLeft="@dimen/size_15"
                    android:paddingRight="@dimen/size_15"
                    android:paddingTop="@dimen/size_5"
                    android:text="@string/pro_prices"
                    android:textColor="@color/grey" />

                <TextView
                    android:id="@+id/goodsdetailed_price"
                    style="@style/text_edittext"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/white"
                    android:gravity="left|center_vertical"
                    android:text="$1-$100" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_line_bg_line"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/size_10">

                <TextView
                    style="@style/text_style"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/size_5"
                    android:paddingLeft="@dimen/size_15"
                    android:paddingRight="@dimen/size_15"
                    android:paddingTop="@dimen/size_5"
                    android:text="有效期"
                    android:textColor="@color/grey" />

                <TextView
                    android:id="@+id/do_time"
                    style="@style/text_edittext"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/white"
                    android:gravity="left|center_vertical"
                    android:text="10000" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_line_bg_line"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/size_10">

                <TextView
                    style="@style/text_style"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/size_5"
                    android:paddingLeft="@dimen/size_15"
                    android:paddingRight="@dimen/size_15"
                    android:paddingTop="@dimen/size_5"
                    android:text="@string/stock"
                    android:textColor="@color/grey" />

                <TextView
                    android:id="@+id/goodsdetailed_stock"
                    style="@style/text_edittext"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/white"
                    android:gravity="left|center_vertical"
                    android:text="10000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/size_10">

                <TextView
                    style="@style/text_style"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/size_5"
                    android:paddingLeft="@dimen/size_15"
                    android:paddingRight="@dimen/size_15"
                    android:paddingTop="@dimen/size_5"
                    android:text="@string/publisher"
                    android:textColor="@color/grey" />

                <TextView
                    android:id="@+id/goodsdetailed_publisher"
                    style="@style/text_edittext"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/white"
                    android:gravity="left|center_vertical"
                    android:text="ycs" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/size_5"
                    android:paddingLeft="@dimen/size_15"
                    android:paddingRight="@dimen/size_15"
                    android:paddingTop="@dimen/size_5"
                    android:text="@string/usetime"
                    android:textColor="@color/grey" />

                <TextView
                    android:id="@+id/goodsdetailed_time"
                    style="@style/text_edittext"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/white"
                    android:gravity="left|center_vertical"
                    android:text="2016-04-18至2017-08-28" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/size_5"
                    android:paddingLeft="@dimen/size_15"
                    android:paddingRight="@dimen/size_15"
                    android:paddingTop="@dimen/size_5"
                    android:text="@string/uselocation"
                    android:textColor="@color/grey" />

                <TextView
                    android:id="@+id/goodsdetailed_location"
                    style="@style/text_edittext"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@color/white"
                    android:gravity="left|center_vertical"
                    android:text="北京市" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_55"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/goodsdetailed_shopcart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/white">

            <ImageView
                android:id="@+id/gooddetailed_shopcart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_shop"
                android:visibility="visible" />

            <TextView
                android:id="@+id/gooddetailed_shopcart_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-7dp"
                android:layout_marginTop="@dimen/size_10"
                android:layout_toRightOf="@+id/gooddetailed_shopcart"
                android:background="@drawable/circle_text"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gooddetailed_shopcart"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/size_15"
                android:text="@string/shopcart" />
        </RelativeLayout>

        <TextView
            android:id="@+id/goodsdetailed_addshopcart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/title_bg"
            android:gravity="center"
            android:text="@string/addcart"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

</RelativeLayout>