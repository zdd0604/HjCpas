<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.hj.casps.protocolmanager.RequestProtocol">

    <android.support.design.widget.TabLayout
        android:id="@+id/fragment_protocol_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        app:tabIndicatorColor="@color/title_bg"
        app:tabIndicatorHeight="@dimen/size_2"
        app:tabSelectedTextColor="@color/title_bg"
        app:tabTextColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/lineColor" />

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_protocol_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>
