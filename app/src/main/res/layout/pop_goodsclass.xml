<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transLucent">

    <View
        android:id="@+id/gooddeclass_pop_do_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transParent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/font_size_24"
        android:paddingRight="@dimen/font_size_24"
        android:paddingTop="@dimen/size_20"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/gooddeclass_pop_goodpic"
            android:layout_width="@dimen/size_65"
            android:layout_height="@dimen/size_65"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/up_sc" />

        <TextView
            android:id="@+id/gooddeclass_pop_goodname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_10"
            android:text="排骨" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/size_15"
            android:background="@color/lineColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gooddeclass_do_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawablePadding="@dimen/size_5"
                android:drawableTop="@mipmap/cz_edit"
                android:gravity="center_horizontal"
                android:text="@string/edit"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/gooddeclass_do_do"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawablePadding="@dimen/size_5"
                android:drawableTop="@mipmap/cz_enable"
                android:gravity="center_horizontal"
                android:text="@string/doit"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/gooddeclass_do_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawablePadding="@dimen/size_5"
                android:drawableTop="@mipmap/cz_details"
                android:gravity="center_horizontal"
                android:text="@string/detail"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/size_10"
            android:background="@color/lineColor" />

        <Button
            android:id="@+id/gooddeclass_pop_do_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="@string/cancel"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>
</RelativeLayout>