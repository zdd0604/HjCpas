<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_bg">

    <ImageView
        android:id="@+id/aboutus_img"
        android:layout_width="@dimen/size_80"
        android:layout_height="@dimen/size_80"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_100"
        android:src="@mipmap/android_template" />
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/aboutus_vesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/size_5"
        android:clickable="false"
        android:layout_below="@+id/aboutus_img"
        android:layout_marginTop="@dimen/size_10"
        app:fb_borderColor="@color/grey"
        app:fb_borderWidth="1dp"
        app:fb_defaultColor="@color/main_bg"
        app:fb_focusColor="@color/main_bg"
        app:fb_radius="@dimen/size_10"
        app:fb_text="CASIN29991232"
        app:fb_textColor="@color/grey"
        app:fb_textSize="@dimen/font_size_12"></mehdi.sakout.fancybuttons.FancyButton>

    <TextView
        android:id="@+id/aboutus_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutus_vesion"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/size_35"
        android:layout_marginRight="@dimen/size_35"
        android:textSize="@dimen/font_size_14"
        android:lineSpacingExtra="@dimen/size_3"
        style="@style/text_style"
        android:text="@string/about_us_tv01"
        android:textColor="@color/grey"
        android:layout_marginTop="@dimen/size_15"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/size_50"
        android:orientation="vertical">
        <TextView
            android:id="@+id/aboutus_msg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aboutus_vesion"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/size_35"
            android:layout_marginRight="@dimen/size_35"
            android:textSize="@dimen/font_size_14"
            android:lineSpacingExtra="@dimen/size_3"
            style="@style/text_style"
            android:text="@string/about_us_tv02"
            android:textColor="@color/grey"
            android:layout_marginTop="@dimen/size_15"/>
        <TextView
            android:id="@+id/aboutus_msg_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aboutus_vesion"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/size_35"
            android:layout_marginRight="@dimen/size_35"
            android:textSize="@dimen/font_size_14"
            android:lineSpacingExtra="@dimen/size_3"
            style="@style/text_style"
            android:text="@string/about_us_tv03"
            android:textColor="@color/grey"
            android:layout_marginTop="@dimen/size_5"/>
        <TextView
            android:id="@+id/aboutus_msg_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aboutus_vesion"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/size_35"
            android:layout_marginRight="@dimen/size_35"
            android:textSize="@dimen/font_size_14"
            android:lineSpacingExtra="@dimen/size_3"
            style="@style/text_style"
            android:text="@string/about_us_tv04"
            android:textColor="@color/grey"
            android:layout_marginTop="@dimen/size_5"/>
    </LinearLayout>

</RelativeLayout>
