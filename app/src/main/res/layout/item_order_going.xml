<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:layout_marginTop="@dimen/size_10"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_10">

        <CheckBox
            android:id="@+id/layout_check_order_going"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/check_bg"
            android:button="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:text="@string/tv_bills_id_title"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/layout_tv_order_line_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="30162005689720"
            android:textColor="@color/bills_id_tv_color" />

        <TextView
            android:id="@+id/order_item_state"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/size_10"
            android:layout_weight="2"
            android:background="@color/light_green"
            android:gravity="center"
            android:text="执行中"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_1"
        android:background="@color/white"
        android:paddingLeft="@dimen/size_10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_35"
                android:paddingTop="@dimen/size_10">

                <TextView
                    android:layout_width="@dimen/size_80"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/order_doing_object"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/order_doing_object"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:maxLines="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_30">

                <TextView
                    android:id="@+id/create_time"
                    android:layout_width="@dimen/size_80"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/order_doing_create_time"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/order_doing_create_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_35"
                android:paddingBottom="@dimen/size_10">

                <TextView
                    android:layout_width="@dimen/size_80"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/order_doing_all_price"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/order_doing_all_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="@dimen/size_10">

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/order_going_btn2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_40"
                android:layout_marginLeft="@dimen/main_margin"
                android:gravity="center"
                android:paddingLeft="@dimen/size_20"
                android:paddingRight="@dimen/size_20"
                android:visibility="gone"
                app:fb_borderColor="@color/title_bg"
                app:fb_borderWidth="1dp"
                app:fb_defaultColor="@color/white"
                app:fb_focusColor="@color/title_bg"
                app:fb_radius="@dimen/size_5"
                app:fb_text="@string/quotes_edit"
                app:fb_textColor="@color/title_bg"
                app:fb_textSize="@dimen/btn_size" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/order_going_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_40"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_marginRight="@dimen/size_10"
                android:gravity="center"
                android:paddingLeft="@dimen/size_20"
                android:paddingRight="@dimen/size_20"
                app:fb_borderColor="@color/title_bg"
                app:fb_borderWidth="1dp"
                app:fb_defaultColor="@color/white"
                app:fb_focusColor="@color/title_bg"
                app:fb_radius="@dimen/size_5"
                app:fb_text="@string/quotes_edit"
                app:fb_textColor="@color/title_bg"
                app:fb_textSize="@dimen/btn_size" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>