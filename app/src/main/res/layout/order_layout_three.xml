<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10">

        <TextView
            android:id="@+id/order_item_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="冷冻大肉"
            android:textColor="@color/title_bg"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/item_detail_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0.00"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_10"
            android:layout_toLeftOf="@id/item_detail_order_price"
            android:text="@string/tv_sum_money_title"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_14" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:layout_marginTop="@dimen/size_1"
        android:background="@color/white"
        android:paddingTop="@dimen/size_10">

        <TextView
            android:layout_width="@dimen/size_80"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/tv_commodity_one_money_title_text"
            android:textSize="@dimen/font_size_14" />

        <EditText
            android:id="@+id/order_detail_item_price"
            android:layout_width="@dimen/size_200"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/size_5"
            android:background="@drawable/edittext_contains_border"
            android:gravity="center"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_35"
        android:background="@color/white">

        <TextView
            android:layout_width="@dimen/size_80"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/quotes_create_number"
            android:textSize="@dimen/font_size_14" />

        <EditText
            android:id="@+id/order_detail_item_number"
            android:layout_width="@dimen/size_200"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/size_5"
            android:background="@drawable/edittext_contains_border"
            android:digits="0123456789"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="9" />
    </LinearLayout>
</LinearLayout>
