<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:background="@color/white"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/layout_head_left_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/size_10"
            android:layout_marginLeft="@dimen/main_margin"
            android:layout_marginTop="@dimen/size_10"
            android:paddingLeft="@dimen/size_20"
            android:paddingRight="@dimen/size_20"
            app:fb_borderColor="@color/title_bg"
            app:fb_borderWidth="1dp"
            app:fb_defaultColor="@color/title_bg"
            app:fb_focusColor="@color/title_bg"
            app:fb_radius="@dimen/size_5"
            app:fb_text="@string/head_operator_add_title"
            app:fb_textColor="@color/white"
            app:fb_textSize="@dimen/btn_size" />

        <TextView
            android:id="@+id/layout_head_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_height"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/main_margin"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/dodesc"
            android:textColor="@color/title_bg"
            android:textSize="@dimen/btn_size" />


        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/layout_head_right_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_height"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/size_10"
            android:layout_marginLeft="@dimen/main_margin"
            android:layout_marginRight="@dimen/main_margin"
            android:layout_marginTop="@dimen/size_10"
            android:paddingLeft="@dimen/size_20"
            android:paddingRight="@dimen/size_20"
            android:visibility="gone"
            app:fb_borderColor="@color/orange"
            app:fb_borderWidth="1dp"
            app:fb_defaultColor="@color/orange"
            app:fb_focusColor="@color/orange"
            app:fb_radius="@dimen/size_5"
            app:fb_text="@string/hint_layout_right_btn_title"
            app:fb_textColor="@color/white"
            app:fb_textSize="@dimen/btn_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/view_bg" />

</LinearLayout>
