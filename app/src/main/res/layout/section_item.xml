<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_5"
        android:background="@color/view_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_35">

        <TextView
            android:id="@+id/tv_section_bills_id_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_15"
            android:gravity="center"
            android:text="@string/hint_tv_section_bills_id_title"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_section_bills_id_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_5"
            android:text="789654111265656411"
            android:textColor="@color/tv_blue" />

        <TextView
            android:id="@+id/tv_commit_apply_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_15"
            android:background="@drawable/textview_bg"
            android:gravity="center"
            android:padding="@dimen/size_2"
            android:text="@string/hint_tv_commit_apply_title"
            android:visibility="gone"
            android:textColor="@color/white"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/view_bg" />

    <LinearLayout
        android:id="@+id/layout_section_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/layout_1_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15"
            android:text="@string/hint_tv_section_bills_opposite_title"
            android:textColor="@color/bills_tv_color" />

        <TextView
            android:id="@+id/layout_1_tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_weight="1"
            android:textColor="@color/bills_tv_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_section_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/layout_2_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15"
            android:text="@string/hint_tv_section_bills_my_propose_time_title"
            android:textColor="@color/bills_tv_color" />

        <TextView
            android:id="@+id/layout_2_tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_weight="1"
            android:textColor="@color/bills_tv_color" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_section_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/layout_3_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15"
            android:text="@string/hint_tv_section_bills_bills_money_title"
            android:textColor="@color/bills_tv_color" />

        <TextView
            android:id="@+id/layout_3_tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_weight="1"
            android:textColor="@color/bills_tv_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_section_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/layout_4_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15"
            android:text="@string/hint_tv_section_bills_my_propose_moey_title"
            android:textColor="@color/bills_tv_color" />

        <TextView
            android:id="@+id/layout_4_tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_weight="1"
            android:textColor="@color/bills_tv_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_section_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/layout_5_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15"
            android:text="@string/hint_tv_section_bills_opposite_title"
            android:textColor="@color/bills_tv_color" />

        <TextView
            android:id="@+id/layout_5_tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_weight="1"
            android:textColor="@color/bills_tv_color" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:layout_marginTop="@dimen/size_10"
        android:background="@color/view_bg" />

    <RelativeLayout
        android:id="@+id/relative_layout_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40">

        <TextView
            android:id="@+id/tv_request_stop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_15"
            android:background="@drawable/textview_bg2"
            android:paddingBottom="@dimen/size_5"
            android:paddingLeft="@dimen/size_10"
            android:paddingRight="@dimen/size_10"
            android:paddingTop="@dimen/size_5"
            android:text="@string/hint_tv_request_stop_title"
            android:textColor="@color/text_color_blue" />
    </RelativeLayout>
</LinearLayout>
