<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/search_price_name_Ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_hignt"
        android:background="@drawable/bottom_line_bg_line"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/main_margin"
        android:paddingRight="@dimen/main_margin">

        <TextView
            style="@style/text_style"
            android:layout_weight="1"
            android:text="@string/name"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/editGoods_name_Et"
            style="@style/text_style"
            android:layout_weight="2"
            android:hint="@string/ple_input_goodsname" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_line_bg_line"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/size_10"
        android:paddingLeft="@dimen/main_margin"
        android:paddingRight="@dimen/main_margin">

        <TextView
            style="@style/text_style"
            android:layout_width="match_parent"
            android:text="@string/screen"
            android:textColor="@color/black" />

       <!-- <ListView
            android:id="@+id/search_price_name_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:listSelector="@color/transParent"
            android:overScrollMode="never"
            android:divider="@color/transParent"
            android:scrollbars="none"></ListView>

-->

        <CheckBox
            android:id="@+id/cb_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本省公开报价"
            />
        <CheckBox

            android:id="@+id/cb_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="业务合作会员"
            />
        <CheckBox

            android:id="@+id/cb_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注会员"
            />
        <CheckBox
            android:id="@+id/cb_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在群组"
            />


    </LinearLayout>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/search_price_Btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginLeft="@dimen/main_margin"
        android:layout_marginRight="@dimen/main_margin"
        android:layout_marginTop="@dimen/size_15"
        app:fb_borderColor="@color/transParent"
        app:fb_borderWidth="1dp"
        app:fb_defaultColor="@color/title_bg"
        app:fb_focusColor="@color/title_bg"
        app:fb_radius="@dimen/size_5"
        app:fb_text="@string/search"
        app:fb_textColor="@color/white"
        app:fb_textSize="@dimen/btn_size"/>
</LinearLayout>
