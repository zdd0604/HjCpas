<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hj.casps.quotes.QuoteQuery">

    <RelativeLayout
        android:id="@+id/quote_top_Re"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:background="@drawable/bottom_line_bg_line"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/quote_create_Btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/size_10"
            android:layout_marginLeft="@dimen/main_margin"
            android:layout_marginTop="@dimen/size_10"
            android:paddingLeft="@dimen/size_20"
            android:paddingRight="@dimen/size_20"
            app:fb_borderColor="@color/title_bg"
            app:fb_borderWidth="1dp"
            app:fb_defaultColor="@color/title_bg"
            app:fb_focusColor="@color/title_bg"
            app:fb_radius="@dimen/size_5"
            app:fb_text="@string/create_quotes"
            app:fb_textColor="@color/white"
            app:fb_textSize="@dimen/btn_size" />

        <TextView
            android:id="@+id/quote_do_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_height"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/size_10"
            android:layout_marginRight="@dimen/main_margin"
            android:layout_marginTop="@dimen/size_10"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/dodesc"
            android:textColor="@color/title_bg"
            android:textSize="@dimen/btn_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_10"
        android:background="@color/lineColor" />

    <ListView
        android:id="@+id/quotes_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="@dimen/size_5" />
</LinearLayout>
