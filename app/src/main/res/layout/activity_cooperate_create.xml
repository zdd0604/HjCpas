<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hj.casps.cooperate.CooperateCreate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lineColor"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:background="@drawable/bottom_line_bg_line">

            <TextView
                android:id="@+id/cooperate_create_info"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/size_10"
                android:layout_marginRight="@dimen/main_margin"
                android:layout_marginTop="@dimen/size_10"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/dodesc"
                android:textColor="@color/title_bg"
                android:textSize="@dimen/btn_size" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_5"
            android:background="@color/lineColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30"
            android:background="@color/white"
            android:gravity="center">

            <TextView
                android:layout_width="@dimen/size_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/cooperate_type"
                android:textSize="@dimen/font_size_16" />


            <TextView
                android:id="@+id/cooperate_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_15"
                android:paddingRight="@dimen/size_10"
                android:text="销售"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30"
            android:background="@color/white"
            android:gravity="center">

            <TextView
                android:layout_width="@dimen/size_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/cooperate_buy_role"
                android:textSize="@dimen/font_size_16" />


            <TextView
                android:id="@+id/cooperate_buy_role"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_15"
                android:paddingRight="@dimen/size_10"
                android:text="奥森学院"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30"
            android:background="@color/white"
            android:gravity="center">

            <TextView
                android:layout_width="@dimen/size_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/cooperate_sell_role"
                android:textSize="@dimen/font_size_16" />


            <TextView
                android:id="@+id/cooperate_sell_role"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_15"
                android:paddingRight="@dimen/size_10"
                android:text="长城商行"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_10"
            android:background="@color/activity_bg_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_60"
            android:background="@color/white"
            android:gravity="center">

            <TextView
                android:layout_width="@dimen/size_120"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/cooperate_products_list"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_16" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/cooperate_products_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/size_10"
                android:layout_marginRight="@dimen/main_margin"
                android:layout_marginTop="@dimen/size_10"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10"
                app:fb_borderColor="@color/title_bg"
                app:fb_borderWidth="1dp"
                app:fb_defaultColor="@color/white"
                app:fb_focusColor="@color/title_bg"
                app:fb_radius="@dimen/size_5"
                app:fb_text="@string/cooperate_products_choose_type1"
                app:fb_textColor="@color/title_bg"
                app:fb_textSize="@dimen/btn_size" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/activity_bg_color" />

        <com.hj.casps.ui.MyGridView
            android:id="@+id/cooperate_create_gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:numColumns="3"
            android:padding="@dimen/size_10" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_10"
            android:background="@color/activity_bg_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45"
            android:background="@color/white"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="@dimen/size_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/cooperate_handler_role_text"
                android:textSize="@dimen/font_size_16" />


            <TextView
                android:id="@+id/cooperate_protocol_object"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_15"
                android:paddingRight="@dimen/size_10"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/activity_bg_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45"
            android:background="@color/white"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="@dimen/size_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/cooperate_protocol_time"
                android:textSize="@dimen/font_size_16" />


            <TextView
                android:id="@+id/cooperate_protocol_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_15"
                android:paddingRight="@dimen/size_10"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/activity_bg_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45"
            android:background="@color/white"
            android:gravity="center">

            <TextView
                android:layout_width="@dimen/size_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/cooperate_protocol_title"
                android:textSize="@dimen/font_size_16" />


            <EditText
                android:id="@+id/cooperate_protocol_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_15"
                android:paddingRight="@dimen/size_10"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/activity_bg_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45"
            android:background="@color/white"
            android:gravity="center">

            <TextView
                android:layout_width="@dimen/size_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/cooperate_protocol_valid_time"
                android:textSize="@dimen/font_size_16" />


            <TextView
                android:id="@+id/cooperate_protocol_valid_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size_5"
                android:layout_weight="1"
                android:background="@drawable/all_around_line_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_15"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:layout_width="@dimen/size_20"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="—" />

            <TextView
                android:id="@+id/cooperate_protocol_valid_time_to"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size_5"
                android:layout_weight="1"
                android:background="@drawable/all_around_line_bg"
                android:gravity="center"
                android:paddingRight="@dimen/size_15"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/activity_bg_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45"
            android:background="@color/white"
            android:gravity="center">

            <TextView
                android:layout_width="@dimen/size_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/cooperate_protocol_settle_rule"
                android:textSize="@dimen/font_size_16" />


            <Spinner
                android:id="@+id/cooperate_protocol_settle_rule"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="@dimen/size_15"
                android:paddingRight="@dimen/size_10"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/activity_bg_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45"
            android:background="@color/white"
            android:gravity="center">

            <TextView
                android:layout_width="@dimen/size_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/cooperate_protocol_ship_rule"
                android:textSize="@dimen/font_size_16" />


            <Spinner
                android:id="@+id/cooperate_protocol_ship_rule"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="@dimen/size_15"
                android:paddingRight="@dimen/size_10"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/activity_bg_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45"
            android:background="@color/white"
            android:gravity="center">

            <TextView
                android:layout_width="@dimen/size_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/cooperate_products_transport_mode"
                android:textSize="@dimen/font_size_16" />


            <Spinner
                android:id="@+id/cooperate_products_transport_mode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="@dimen/size_15"
                android:paddingRight="@dimen/size_10"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/products_buy_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45"
            android:layout_marginTop="@dimen/size_1"
            android:background="@color/white"
            android:gravity="center">

            <TextView
                android:layout_width="@dimen/size_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/cooperate_products_buy_account"
                android:textSize="@dimen/font_size_16" />


            <Spinner
                android:id="@+id/cooperate_products_buy_account"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="@dimen/size_15"
                android:paddingRight="@dimen/size_10"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/products_ship_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45"
            android:layout_marginTop="@dimen/size_1"
            android:background="@color/white"
            android:gravity="center">

            <TextView
                android:layout_width="@dimen/size_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/cooperate_products_ship_address"
                android:textSize="@dimen/font_size_16" />


            <Spinner
                android:id="@+id/cooperate_products_ship_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="@dimen/size_15"
                android:paddingRight="@dimen/size_10"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/products_receipt_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45"
            android:layout_marginTop="@dimen/size_1"
            android:background="@color/white"
            android:gravity="center">

            <TextView
                android:layout_width="@dimen/size_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/cooperate_products_receipt_account"
                android:textSize="@dimen/font_size_16" />


            <Spinner
                android:id="@+id/cooperate_products_receipt_account"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="@dimen/size_15"
                android:paddingRight="@dimen/size_10"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/products_delivery_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45"
            android:layout_marginTop="@dimen/size_1"
            android:background="@color/white"
            android:gravity="center">

            <TextView
                android:layout_width="@dimen/size_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/cooperate_products_delivery_address"
                android:textSize="@dimen/font_size_16" />


            <Spinner
                android:id="@+id/cooperate_products_delivery_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="@dimen/size_15"
                android:paddingRight="@dimen/size_10"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/activity_bg_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_80"
            android:background="@color/white">

            <TextView
                android:layout_width="@dimen/size_80"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10"
                android:text="@string/cooperate_products_remarks"
                android:textSize="@dimen/font_size_16" />


            <EditText
                android:id="@+id/cooperate_products_remarks"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="@dimen/size_15"
                android:paddingRight="@dimen/size_10"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/activity_bg_color" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/cooperate_create_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_55"
            android:layout_marginBottom="@dimen/size_30"
            android:layout_marginLeft="@dimen/main_margin"
            android:layout_marginRight="@dimen/main_margin"
            android:layout_marginTop="@dimen/size_30"
            android:paddingLeft="@dimen/size_20"
            android:paddingRight="@dimen/size_20"
            app:fb_borderColor="@color/title_bg"
            app:fb_borderWidth="1dp"
            app:fb_defaultColor="@color/title_bg"
            app:fb_focusColor="@color/title_bg"
            app:fb_radius="@dimen/size_5"
            app:fb_text="@string/cooperate_products_save"
            app:fb_textColor="@color/white"
            app:fb_textSize="@dimen/btn_size" />
    </LinearLayout>


</ScrollView>
