<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/view_bg" />

    <include
        layout="@layout/layout_order_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/layout_harvest_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_5"
        android:layout_marginTop="@dimen/size_5"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/harvest_left_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/harvest_tv_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15"
                android:text="糯米"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/harvest_left_layout_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_marginTop="@dimen/size_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/harvest_tv_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_bank_name_title"
                    android:textSize="@dimen/font_size_13"
                    android:textColor="@color/bills_tv_color" />

                <TextView
                    android:id="@+id/harvest_tv_content_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_12"
                    android:textColor="@color/bills_tv_color" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/harvest_left_layout_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_marginTop="@dimen/size_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/harvest_tv_title_3"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/font_size_13"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_sum_money_title"
                    android:textColor="@color/bills_tv_color" />

                <TextView
                    android:id="@+id/harvest_tv_content_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_12"
                    android:textColor="@color/bills_tv_color" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/harvest_left_layout_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_marginTop="@dimen/size_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/harvest_tv_title_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_already_money_title"
                    android:textSize="@dimen/font_size_13"
                    android:textColor="@color/bills_tv_color" />

                <TextView
                    android:id="@+id/harvest_tv_content_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_12"
                    android:textColor="@color/bills_tv_color" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/harvest_left_layout_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15"
                android:layout_marginTop="@dimen/size_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/harvest_tv_title_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_await_money_title"
                    android:textSize="@dimen/font_size_13"
                    android:textColor="@color/bills_tv_color" />

                <TextView
                    android:id="@+id/harvest_tv_content_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_12"
                    android:textColor="@color/bills_tv_color" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_harvest_right_2"
            android:layout_width="@dimen/size_170"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/harvest_tv_title_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_13"
                    android:text="@string/tv_now_money_title"
                    android:textColor="@color/bills_tv_color" />

                <EditText
                    android:id="@+id/harvest_ed_content_6"
                    android:layout_width="@dimen/size_70"
                    android:layout_height="@dimen/size_30"
                    android:layout_marginRight="@dimen/size_15"
                    android:background="@drawable/input_money_bg"
                    android:gravity="center"
                    android:inputType="number"
                    android:textSize="@dimen/font_size_12"
                    android:singleLine="true" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/view_bg" />

    <LinearLayout
        android:id="@+id/layout_harvest_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/harvest_tv_title_7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_15"
            android:gravity="center_vertical"
            android:textSize="@dimen/font_size_13"
            android:text="@string/tv_payment_id_title"
            android:textColor="@color/bills_tv_color" />

        <TextView
            android:id="@+id/harvest_tv_content_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/harvest_img_title_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/size_15"
            android:src="@mipmap/jt3" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/view_bg" />

    <EditText
        android:id="@+id/harvest_ed_content_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:focusable="false"
        android:gravity="top"
        android:hint="@string/ed_hint_title"
        android:minLines="3"
        android:paddingLeft="@dimen/size_15"
        android:paddingRight="@dimen/size_15"
        android:paddingTop="@dimen/size_5"
        android:textSize="@dimen/font_size_16"
        android:visibility="gone" />
</LinearLayout>