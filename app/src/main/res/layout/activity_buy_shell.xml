<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color"
    android:orientation="vertical"
    tools:context="com.hj.casps.ordermanager.BuyShell">

    <RelativeLayout
        android:id="@+id/info_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:background="@drawable/bottom_line_bg_line">

        <TextView
            android:id="@+id/buy_shell_info"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_height"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/size_10"
            android:layout_marginRight="@dimen/main_margin"
            android:layout_marginTop="@dimen/size_10"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/dodesc"
            android:textColor="@color/title_bg"
            android:textSize="@dimen/btn_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_10"
        android:background="@color/activity_bg_color" />

    <RelativeLayout
        android:id="@+id/relation_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image_buy_shell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/size_10"
            android:scaleType="fitCenter"
            android:src="@mipmap/icon_d_user" />

        <TextView
            android:id="@+id/text_name_buy_shell"
            android:layout_width="@dimen/size_80"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/image_buy_shell"
            android:text="@string/cooperate_buy_part"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_16" />


        <TextView
            android:id="@+id/order_buy_name_shell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_name_buy_shell"
            android:paddingRight="@dimen/size_10"
            android:text="长城商行"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/order_buy_product_shell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size_10"
            android:text="@string/order_buy_sort"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:id="@+id/order_buy_num_shell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/order_buy_product_shell"
            android:text="180"
            android:textColor="@color/red"
            android:textSize="@dimen/font_size_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_10"
        android:background="@color/activity_bg_color" />


    <ListView
        android:id="@+id/buy_cart_list_shell"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:dividerHeight="@dimen/size_1" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/activity_bg_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/choose_all_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/select_all_shell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/check_bg"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10"
                android:text="@string/ck_payment_all_title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/offline_shell_reset"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/reset_bg_pink"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/hint_reset_title"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/order_buy_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_style_oriange"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/order_buy"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
