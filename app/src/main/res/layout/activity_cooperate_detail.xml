<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lineColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:layout_marginTop="@dimen/size_5"
        android:background="@color/white"
        android:gravity="center">

        <TextView
            android:id="@+id/member_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/cooperate_person"
            android:textSize="@dimen/font_size_16" />


        <TextView
            android:id="@+id/cooperate_person_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/size_15"
            android:paddingRight="@dimen/size_10"
            android:textColor="@color/title_bg"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_1"
        android:background="@color/view_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:background="@color/white"
        android:gravity="center">

        <TextView
            android:layout_width="@dimen/activity_toast_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/cooperate_address"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/cooperate_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/size_15"
            android:paddingRight="@dimen/size_10"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60"
        android:layout_marginTop="@dimen/size_10"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_title1"
            android:layout_width="@dimen/size_100"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/cooperate_can_buy"
            android:textSize="@dimen/font_size_16" />

        <ToggleButton
            android:id="@+id/toggle_coop_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_toRightOf="@id/text_title1"
            android:background="@android:color/transparent"
            android:button="@drawable/ios7_btn"
            android:text=""
            android:textOff=""
            android:textOn="" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/cooperate_create_buy"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_10"
            android:visibility="invisible"
            app:fb_borderColor="@color/title_bg"
            app:fb_borderWidth="1dp"
            app:fb_defaultColor="@color/title_bg"
            app:fb_focusColor="@color/title_bg"
            app:fb_radius="@dimen/size_5"
            app:fb_text="@string/cooperate_create_buy"
            app:fb_textColor="@color/white"
            app:fb_textSize="@dimen/btn_size" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60"
        android:layout_marginTop="@dimen/size_1"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_title2"
            android:layout_width="@dimen/size_100"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/cooperate_can_sell"
            android:textSize="@dimen/font_size_16" />

        <ToggleButton
            android:id="@+id/toggle_coop_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_toEndOf="@+id/text_title2"
            android:layout_toRightOf="@+id/text_title2"
            android:background="@android:color/transparent"
            android:button="@drawable/ios7_btn"
            android:text="tev"
            android:textOff=""
            android:textOn="" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/cooperate_create_sell"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_10"
            android:visibility="invisible"
            app:fb_borderColor="@color/title_bg"
            app:fb_borderWidth="1dp"
            app:fb_defaultColor="@color/white"
            app:fb_focusColor="@color/title_bg"
            app:fb_radius="@dimen/size_5"
            app:fb_text="@string/cooperate_create_sell"
            app:fb_textColor="@color/title_bg"
            app:fb_textSize="@dimen/btn_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60"
        android:layout_marginTop="@dimen/size_1"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_title3"
            android:layout_width="@dimen/size_100"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/cooperate_downgrade"
            android:textSize="@dimen/font_size_16" />

        <ToggleButton
            android:id="@+id/relation_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_toRightOf="@id/text_title3"
            android:background="@android:color/transparent"
            android:button="@drawable/ios7_btn"
            android:text="tev"
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/submit_fbtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:layout_margin="@dimen/size_15"
        app:fb_borderColor="@color/title_bg"
        app:fb_borderWidth="1dp"
        app:fb_defaultColor="@color/title_bg"
        app:fb_focusColor="@color/title_bg"
        app:fb_radius="@dimen/size_5"
        app:fb_text="@string/True"
        app:fb_textColor="@color/white"
        app:fb_textSize="@dimen/btn_size" />
</LinearLayout>
