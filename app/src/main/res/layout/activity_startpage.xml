<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bj">

    <ImageView
        android:layout_width="@dimen/size_100"
        android:layout_height="@dimen/size_100"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_80"
        android:src="@mipmap/sign_logo" />

    <TextView
        android:id="@+id/startpage_msg02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/size_25"
        android:maxLines="1"
        android:text="@string/startpage_msg_02"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/startpage_msg02"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/size_10"
        android:maxLines="1"
        android:text="@string/startpage_msg_01"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_15" />
</RelativeLayout>
