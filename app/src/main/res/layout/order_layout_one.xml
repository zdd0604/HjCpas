<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:background="@color/white"
        android:gravity="center"
        android:paddingRight="@dimen/size_10">

        <TextView
            android:layout_width="@dimen/size_120"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/order_detail_time_pay"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/order_detail_time_pay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/size_5"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_weight="1"
            android:background="@drawable/edittext_contains_border"
            android:drawableRight="@mipmap/fo_calendar"
            android:focusable="false"
            android:gravity="center"
            android:paddingRight="@dimen/size_10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:layout_marginTop="@dimen/size_1"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10">

        <TextView
            android:layout_width="@dimen/size_100"
            android:layout_height="wrap_content"
            android:text="@string/order_detail_process"
            android:textSize="@dimen/font_size_16" />

        <Spinner
            android:id="@+id/order_detail_process"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:layout_marginTop="@dimen/size_1"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10">

        <TextView
            android:layout_width="@dimen/size_120"
            android:layout_height="wrap_content"
            android:text="@string/order_detail_time_start"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/order_detail_time_start"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/size_5"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_weight="1"
            android:background="@drawable/edittext_contains_border"
            android:drawableRight="@mipmap/fo_calendar"
            android:focusable="false"
            android:gravity="center"
            android:paddingRight="@dimen/size_10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:layout_marginTop="@dimen/size_1"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10">

        <TextView
            android:layout_width="@dimen/size_120"
            android:layout_height="wrap_content"
            android:text="@string/order_detail_time_end"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/order_detail_time_end"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/size_5"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_weight="1"
            android:background="@drawable/edittext_contains_border"
            android:drawableRight="@mipmap/fo_calendar"
            android:focusable="false"
            android:gravity="center"
            android:paddingRight="@dimen/size_10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_70"
        android:layout_marginTop="@dimen/size_1"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10">

        <TextView
            android:layout_width="@dimen/size_100"
            android:layout_height="wrap_content"
            android:text="@string/order_detail_pay_account"
            android:textSize="@dimen/font_size_16" />

        <Spinner
            android:id="@+id/order_detail_pay_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:layout_marginTop="@dimen/size_1"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10">

        <TextView
            android:layout_width="@dimen/size_100"
            android:layout_height="wrap_content"
            android:text="@string/order_detail_pay_address"
            android:textSize="@dimen/font_size_16" />

        <Spinner
            android:id="@+id/order_detail_pay_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_70"
        android:layout_marginTop="@dimen/size_1"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10">

        <TextView
            android:layout_width="@dimen/size_100"
            android:layout_height="wrap_content"
            android:text="@string/order_detail_get_account"
            android:textSize="@dimen/font_size_16" />

        <Spinner
            android:id="@+id/order_detail_get_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:layout_marginTop="@dimen/size_1"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10">

        <TextView
            android:layout_width="@dimen/size_100"
            android:layout_height="wrap_content"
            android:text="@string/order_detail_get_address"
            android:textSize="@dimen/font_size_16" />

        <Spinner
            android:id="@+id/order_detail_get_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>
