<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/size_15"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/price_search_grid_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:layout_gravity="left"
        android:src="@mipmap/up_sc" />

    <TextView
        android:id="@+id/price_search_grid_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:clickable="false"
        android:layout_marginTop="@dimen/size_5"
        android:text="冷冻大肉"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_15" />

    <TextView
        android:id="@+id/price_search_grid_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/size_3"
        android:text="￥25-￥30"
        android:textColor="@color/red"
        android:textSize="@dimen/font_size_13" />

    <TextView
        android:id="@+id/price_search_grid_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/size_3"
        android:text="存货量：5000"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/size_3"
        android:text="有效期:"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_14" />
    <TextView
        android:id="@+id/price_search_grid_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/size_3"
        android:text="2016-05-18至2017-12-30"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_14" />
    <TextView
        android:id="@+id/tv_publishName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/size_3"
        android:text="PublishName"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/price_search_grid_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/size_10"
        android:paddingBottom="@dimen/size_10"
        android:layout_marginTop="@dimen/size_3"
        android:text="@string/addcart"
        android:clickable="true"
        android:textColor="@color/black"
        android:background="@drawable/all_around_line_round_bg"
        android:textSize="@dimen/font_size_14"></TextView>
</LinearLayout>