<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/view_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_bottom_layout_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/layout_bottom_check_layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_15"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/layout_bottom_check_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/check_bg"
                    android:button="@null" />

                <TextView
                    android:id="@+id/layout_bottom_ck_content_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:text="@string/ck_payment_all_title" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/layout_bottom_tv_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/text_color_blue2"
            android:gravity="center"
            android:text="@string/hint_settl_details_del_btn_title"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/layout_bottom_tv_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/reset_bg"
            android:gravity="center"
            android:text="@string/hint_settl_details_add_btn_title"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/layout_bottom_tv_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/title_bg"
            android:gravity="center"
            android:text="@string/hint_settl_details_affirm_btn_title"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
